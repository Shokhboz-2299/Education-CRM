<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/styles/teacher.css">
    <title>Teacher page</title>
</head>

<body class="bg-light">
    <header class="container m-3" style="text-align: right;">
            <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Add task</button>
    </header>
    <main class="main">
        <div class="container wrapper">
            <div class="left d-flex flex-column">
                <button class="btn btn-outline-success work-btn ">Tasks</button>
                <button class="btn btn-outline-success teacher-btn  mt-3">Teachers</button>
                <button class="btn btn-outline-success group-btn mt-3">Groups</button>
            </div>
            <div class="right">

                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight"
                    aria-labelledby="offcanvasRightLabel">
                    <div class="offcanvas-header">
                        <h5 id="offcanvasRightLabel">Add tasks</h5>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <form action="/teacher" method="post" enctype="application/x-www-form-urlencoded">
                            <div class="mb-3">
                              <label for="exampleInputEmail1" class="form-label">Task title</label>
                              <input name="task" type="text" class="form-control" id="exampleInputEmail1"  placeholder="write task">
                            </div>
                            <div class="mb-3">
                              <textarea name="textarea" id="" class="form-control" cols="20" rows="10" placeholder="description"></textarea>
                            </div>

                            <label for="exampleInputEmail2" class="form-label">Choose group</label>
                              <select name="group" class="form-select"  id="exampleInputEmail2">
                                <option selected>Groups</option>
                                <%
                                for (let group of foundGroups ) { %>
                                    <option value="<%= group.group %>"><%= group.group %></option>
                                <% } %>
                            </select>
                            <button type="submit" class="btn btn-primary mt-3">Submit</button>
                          </form>
                    </div>
                </div>
                <table class="table table-striped table-hover table-student show">

                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Course
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 
                        for (let student of foundStudent ) { %>
                        <tr>
                            <td><%= student.id %></td>
                            <td><%= student.username %></td>
                            <td><%= student.course %></td>
                        </tr>
                        <% } %>
                    </tbody>

                </table>
                <table class="table  table-group">

                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Course
                            </th>
                            <th>
                                Teacher
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 
                        for (let group of foundGroups ) { %>
                        <tr>
                            <td><%= group.id %></td>
                            <td><%= group.group %></td>
                            <td><%= group.course %></td>
                            <td><%= group.teacher %></td>
                        </tr>
                        <% } %>
                    </tbody>

                </table>
                <table class="table table-striped table-hover table-homework">

                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Group
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 
                        for (let work of foundTask ) { %>
                        <tr>
                            <td><%= work.id %></td>
                            <td><%= work.name %></td>
                            <td><%= work.izoh %></td>
                            <td><%= work.group %></td>
                        </tr>
                        <% } %>
                    </tbody>

                </table>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
    <script src="assets/js/teacher.js"></script>
</body>

</html>